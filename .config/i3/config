# Dunst
bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart dunst'"
# Screenshots
bindsym Print --release exec --no-startup-id flameshot gui && flameshot full -p ~/Pictures/Screenshots/
bindsym $mod+Print --release exec --no-startup-id "flameshot full -p ~/Pictures/Screenshots/ | notify-send 'Screenshot'"
# Kill a windows
bindsym $mod+Shift+x --release exec --no-startup-id xkill
bindsym Ctrl+Shift+Escape exec kitty -e htop
# lockscreen
bindsym $mod+l exec ~/.bin/lockScreen
